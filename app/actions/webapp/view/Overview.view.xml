<mvc:View
    class="sapUiSizeCompact"
    controllerName="fiori.actions.controller.Overview"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m">
    <Page id='idOverviewPage'>
        <content>
            <smartFilterBar:SmartFilterBar 
                id="idSmartFilterBar" 
                entitySet="Actions" 
                persistencyKey="SmartFilter_Explored" 
                basicSearchFieldName="action" 
                enableBasicSearch="true" >
				<smartFilterBar:layoutData>
					<FlexItemData shrinkFactor="0"/>
				</smartFilterBar:layoutData>
			</smartFilterBar:SmartFilterBar>
			<smartTable:SmartTable 
                id="idSmartTable" 
                entitySet="Actions" 
                smartFilterId="idSmartFilterBar" 
                useExportToExcel="false" 
                useVariantManagement="false" 
                useTablePersonalisation="true" 
                header="{i18n>Actions}" 
                showRowCount="true" 
                persistencyKey="SmartTableAnalytical_Explored" 
                enableAutoBinding="true" 
                class="sapUiResponsiveContentPadding" 
                enableAutoColumnWidth="true">
                <Table id="idActionsTable" mode="SingleSelectLeft" selectionChange="onSelectionChange"/>
				<smartTable:layoutData>
					<FlexItemData growFactor="1" baseSize="0%"/>
				</smartTable:layoutData>
			</smartTable:SmartTable>
        </content>
        <footer>
            <OverflowToolbar>
                <Button id="messagePopoverBtn"
					icon="{ path: 'messages>/', formatter: '.formatter.buttonIconFormatter' }"
					type="{ path: 'messages>/', formatter: '.formatter.buttonTypeFormatter' }"
					text= "{ path: 'messages>/', formatter: '.formatter.highestSeverityMessages' }"
					press=".handleMessagePopoverPress"
					ariaHasPopup="Dialog"/>
				<ToolbarSpacer/>
                <Button icon="sap-icon://add" type="Emphasized" text="{i18n>Insert}" press="onOpenInsertDialog">
                    <customData>
                        <core:CustomData key="dialogName" value="InsertActionDialog" />
                        <core:CustomData key="actionName" value="Insert" />
                    </customData>
                </Button>
                <Button icon="sap-icon://edit" type="Attention" enabled="{view>/selectedAction/isSelected}" text="{i18n>Edit}" press="onOpenInsertDialog">
                    <customData>
                        <core:CustomData key="dialogName" value="EditActionDialog" />
                        <core:CustomData key="actionName" value="Edit" />
                    </customData>
                </Button>
                <Button icon="sap-icon://delete"  type="Reject" enabled="{view>/selectedAction/isSelected}" text="{i18n>Delete}" press="onOpenInsertDialog">
                    <customData>
                        <core:CustomData key="dialogName" value="DeleteActionDialog" />
                        <core:CustomData key="actionName"  value="Delete" />
                    </customData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
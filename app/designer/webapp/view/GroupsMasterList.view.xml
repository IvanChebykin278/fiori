<mvc:View
    height="100%"
    displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
    xmlns:semantic="sap.m.semantic"
	controllerName="fiori.designer.controller.GroupsMasterList">
	<OverflowToolbar>
		<SearchField liveChange=".onSearch" width="100%" />
	</OverflowToolbar>
	<List
	id="idListGroups"
	items="{/Groups}"
	selectionChange=".onSelectionChange"
	mode="SingleSelectMaster"
	updateFinished= "onUpdateFinished">
		<StandardListItem
			title="{title}"
			description="{ID}"/>
	</List>
</mvc:View>
<mvc:View
    class="sapUiSizeCompact"
    controllerName="fiori.semanticobjects.controller.Overview"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m">
    <Page id='idOverviewPage'>
        <content>
            <smartFilterBar:SmartFilterBar 
                id="idSmartFilterBar" 
                entitySet="SemanticObjects" 
                persistencyKey="SmartFilter_Explored" 
                basicSearchFieldName="ID"
                enableBasicSearch="true" >
				<smartFilterBar:layoutData>
					<FlexItemData shrinkFactor="0"/>
				</smartFilterBar:layoutData>
			</smartFilterBar:SmartFilterBar>
			<smartTable:SmartTable 
                id="idSmartTable" 
                entitySet="SemanticObjects" 
                smartFilterId="idSmartFilterBar" 
                useExportToExcel="false"
                useVariantManagement="false" 
                useTablePersonalisation="true"
                header="{i18n>SemanticObjects}" 
                showRowCount="true" 
                persistencyKey="SmartTableSemanticObject_Explored" 
                enableAutoBinding="true"
                class="sapUiResponsiveContentPadding" 
                enableAutoColumnWidth="true">
                <smartTable:customToolbar>
                    <Toolbar>
                        <ToolbarSpacer />
                        <Button icon="sap-icon://add" type="Emphasized" text="{i18n>InsertSemanticObject}" press="onOpenInsertDialog">
                            <customData>
                                <core:CustomData key="dialogName" value="InsertSemanticObjectDialog" />
                            </customData>
                        </Button>
                        <Button icon="sap-icon://edit" type="Ghost" enabled="{view>/selectedSemanticObject/isSelected}" text="{i18n>EditSemanticObject}" press="onEditInsertDialog">
                            <customData>
                                <core:CustomData key="dialogName" value="EditSemanticObjectDialog" />
                            </customData>
                        </Button>
                        <Button icon="sap-icon://delete" type="Ghost" text="{i18n>DeleteSemanticObject}" enabled="{view>/selectedSemanticObject/isSelected}" press="onDeleteDialog">
                            <customData>
                                <core:CustomData key="dialogName" value="InsertRoleDialog" />
                            </customData>
                        </Button>
                    </Toolbar>
                </smartTable:customToolbar>
                <Table id="semanticObjectsTable" mode="SingleSelectMaster" selectionChange="onSelectionChange" />
				<smartTable:layoutData>
					<FlexItemData growFactor="1" baseSize="0%"/>
				</smartTable:layoutData>
			</smartTable:SmartTable>
        </content>
    </Page>
</mvc:View>
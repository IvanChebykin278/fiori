<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog
		class="sapUiSizeCompact"
		title="Insert role">
		<customData>
			<core:CustomData key="dialogName" value="InsertGroupDialog" />
		</customData>
		<content>
			<f:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="1"
				emptySpanL="1"
				emptySpanM="1"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false" >
				<f:content>
					<Label text="Group ID" required="true" />
					<Input id="idGroupId" name="ID" value="{groupId}" />
				</f:content>
			</f:SimpleForm>
		</content>
		<buttons>
			<Button text="Ok" press="onInsert" />
			<Button text="Cancel" press="onCancel" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>